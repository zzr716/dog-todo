<!--index.wxml-->
<view class="container">
  <view class="section">
    <label>输入一个todo项</label>
    <input type="text" value="{{current}}" bindinput="bindkeyInput"/>
    <button bindtap="addItem">增加</button>
  </view>
  <view class="section" wx:for="{{todos}}" wx:key="{{index}}">
    <text class="inline">{{item.text}}</text>
    <button class="inline" style="float:right" bindtap="deleteItem" data-key="{{item.key}}">删除</button>
  </view>
</view>
